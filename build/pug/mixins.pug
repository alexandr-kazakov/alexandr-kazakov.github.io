mixin entry-meta(author, img, date)
  div(class="entry-meta")&attributes(attributes)
    div.entry-meta__author
      img(src="https://secure.gravatar.com/avatar/b6ca1b6b48e87fdd83626bd47b3054e6?s=60&amp;d=identicon&amp;r=g" alt=author  class="entry-meta__author-photo")
      a(rel="author" class="entry-meta__author-name")=author
    div.entry-meta__date
      time(class="" datetime=date)=date

mixin youtube(url)
  div(class="video-youtube-wrapper video-youtube-wrapper_m-b")
    iframe(width="848" height="477" src=url frameborder="0" allow="autoplay; encrypted-media" allowfullscreen)


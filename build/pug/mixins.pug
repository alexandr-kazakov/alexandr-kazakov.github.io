mixin page-header(title)
  div(class="page-header")&attributes(attributes)
    h1(class="section-header__title")=title

mixin section-header(title, descr)
  div(class="section-header")&attributes(attributes)
    h2(class="section-header__title")=title
    if block
      block
    else

